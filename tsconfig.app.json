{
  "include": ["packages/**/*", "plugins/**/*", "common"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "composite": true,
    "baseUrl": ".",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "sourceMap": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "@inpageedit/core"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "~~/*": ["./common/*"]
    }
  }
}
