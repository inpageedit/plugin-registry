{
  "name": "@inpageedit/plugin-sample",
  "description": "Sample plugin for InPageEdit",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "module": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build"
  },
  "$ipe": {
    "name": "Sample Plugin",
    "categories": [],
    "loader": {
      "kind": "module",
      "entry": "dist/index.mjs",
      "styles": [
        "dist/style.css"
      ],
      "main_export": "default"
    },
    "dev_loader": {
      "entry": "src/index.ts",
      "styles": [
        "src/style.scss"
      ]
    }
  }
}